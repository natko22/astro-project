---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us" description="Get in touch with us">
  <!-- Main Content Area -->
  <main class="flex flex-col justify-items-start items-center min-h-screen pt-40">

    <!-- Page Title -->
    <h1 class="text-4xl font-extrabold text-green-dark mb-6 text-center">Contact Us</h1>
    
    <!-- Main Content -->
    <p class="text-lg text-gray-600 leading-relaxed max-w-4xl text-center">
      We would love to hear from you! Reach out to us for any questions, feedback, or inquiries.
    </p>

  </main>
</Layout>

<style>


  .text-green-dark {
    color: #16423C;  
  }

  .text-gray-600 {
    color: #4B5563;  
  }

  .pt-20 {
    padding-top: 5rem; 
  }
</style>
