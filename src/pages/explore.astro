---
import Layout from '../layouts/Layout.astro'; 
import Header from '../components/Header.astro';
import Slideshow from '../components/Slideshow';
---

<Layout title="Korrektur Kumpel Slideshow" description="Explore our visual journey at Korrektur Kumpel">
  <!-- Header Component -->
  <Header />

  <main class="p-10 space-y-8">
    <!-- Page Header and Text Introduction -->
    <header class="text-center space-y-4">
      <h2 class="text-4xl font-extrabold text-green-dark">Explore Our Journey</h2>
      <p class="text-lg text-gray-600">
        Take a visual tour through our journey and milestones with these dynamic images from Korrektur Kumpel.
      </p>
    </header>

    <!-- Slideshow Section -->
    <section class="flex justify-center items-center ">
      <div class="w-full max-w-5xl mx-auto">
        <Slideshow />
      </div>
    </section>
  </main>
</Layout>

<style>
.text-green-dark {
  color: #16423C;
}

.text-gray-600 {
  color: #4B5563;
}
</style>
